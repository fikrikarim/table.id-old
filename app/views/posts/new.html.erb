<h2 class="mdl-typography--headline">Submit new story</h2>

<%= form_for @post do |f| %>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label max-width">
    <%= f.label :Title, class: "mdl-textfield__label" %>
    <%= f.text_field :title, autofocuse: true, class: "mdl-textfield__input" %>
  </div>

  <br>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label max-width">
    <%= f.label :Story, class: "mdl-textfield__label" %>
    <%= f.text_area :text, :rows => 15, class: "mdl-textfield__input" %>
  </div>

  <!-- <div class="">
    <p class="mdl-typography--body-2">Text styling:</p>
    <p class="mdl-typography--body-2">**Bold**</p>
  </div> -->

  <div class="actions">
    <%= f.submit "Submit", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent" %>
  </div>
  <br>
  <br>
<% end %>
