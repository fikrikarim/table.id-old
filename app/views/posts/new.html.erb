<h2 class="mdl-typography--headline">Submit a new post</h2>

<%= form_for @post do |f| %>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :Title, class: "mdl-textfield__label" %>
    <%= f.text_field :title, autofocuse: true, class: "mdl-textfield__input" %>
  </div>

  <br>

  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :Text, class: "mdl-textfield__label" %>
    <%= f.text_area :text, :rows => 5, autofocuse: true, class: "mdl-textfield__input" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent" %>
  </div>
  <br>
  <br>
<% end %>
