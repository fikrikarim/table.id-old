<div class="mdl-cell--4-col-desktop mdl-cell--4-offset-desktop">

  <h2 class="mdl-typography--display-1">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :username, class: "mdl-textfield__label" %>
      <%= f.text_field :username, autofocus: true, class: "mdl-textfield__input" %>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :email, class: "mdl-textfield__label" %>
      <%= f.email_field :email, class: "mdl-textfield__input" %>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :password, class: "mdl-textfield__label" %>
      <%= f.password_field :password, autocomplete: "off", class: "mdl-textfield__input", pattern: ".{6,}" %>
      <span class="mdl-textfield__error">Minimum 6 characters</span>
    </div>

    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
      <%= f.label :password_confirmation, class: "mdl-textfield__label" %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "mdl-textfield__input" %>
    </div>

    <br>
    <br>

    <div class="actions">
      <%= f.submit "Sign up", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent" %>
    </div>
  <% end %>

  <br>

  <%= render "devise/shared/links" %>
</div>
