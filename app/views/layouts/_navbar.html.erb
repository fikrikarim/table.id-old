<header class="mdl-layout__header">
  <div class="mdl-layout__header-row">
    <!-- Title -->
    <span class="mdl-layout-title"><%= link_to "Table.id", root_path, class: "title-text"%></span>
    <!-- Add spacer, to align navigation to the right -->
    <div class="mdl-layout-spacer"></div>
    <!-- Navigation -->
    <nav class="mdl-navigation">
      <% if user_signed_in? %>
        <!-- Right aligned menu below button -->
        <button id="demo-menu-lower-right"
                class="mdl-button mdl-js-button mdl-color-text--white lowercase">
        <%= current_user.username %>
          <i class="material-icons">arrow_drop_down</i>
        </button>

        <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
            for="demo-menu-lower-right">
            <%= link_to "Logout", destroy_user_session_path, class: "mdl-menu__item", method: :delete %>
        </ul>
      <% else %>
        <%= link_to "Login", new_user_session_path, class: "mdl-button mdl-js-button mdl-color-text--white login-button" %>
      <% end %>
    </nav>
  </div>
</header>
