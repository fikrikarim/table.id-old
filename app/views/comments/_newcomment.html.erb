<span class="mdl-typography--subhead">Submit a comment</span>
<%= form_for @comment do |f| %>
  <%= f.hidden_field :parent_id %>
  <%= f.hidden_field :post_id %>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <%= f.label :Comment, class: "mdl-textfield__label" %>
    <%= f.text_area :text, :rows => 8, autofocuse: true, class: "mdl-textfield__input" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "mdl-button mdl-js-button mdl-button--raised mdl-button--accent" %>
  </div>
<% end %>
