<div class="comment-container">

  <%= render 'shared/votebutton', source: comment %>

  <div class="comment-text-container">
    <div class="post-attributes mdl-typography--caption-color-contrast">
      <span class="comment-attributes">
        <%= time_ago_in_words(comment.created_at) %> ago by
        <%= link_to comment.user.username, user_profile_path(comment.user.username) %>
        <%- if controller_name == 'users' %>
          | on: <%= link_to comment.post.title, post_path(comment.post)%>
        <%- end %>
      </span>
    </div>
      <div class="markdown-comment">
        <%= markdown(comment.text) %>
      </div>
      <%= link_to "Reply", new_comment_path(post_id: comment.post.id, parent_id: comment) %>
  </div>
</div>
